{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "esnext",
    "outDir": "./build",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "allowJs": true,
    "paths": {
      "@/*": ["./*"],
      "@models/*": ["./models/*"],
      "@lib/*": ["./lib/*"],
      "@components/*": ["./components/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
