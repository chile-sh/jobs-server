{
  "name": "jobs-server",
  "version": "2.0.0",
  "main": "build/server.js",
  "license": "GPL-3.0",
  "scripts": {
    "ts-node": "node -r tsconfig-paths/register -r ts-node/register -r dotenv/config",
    "start": "yarn ts-node --inspect=5858 src/server.ts",
    "dev": "nodemon",
    "build": "rm -rvf build && tsc",
    "serve": "node build/server.js",
    "test": "yarn lint && jest",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.@(ts|js|tsx|jsx)'",
    "lint:fix": "yarn lint --fix",
    "docker": "docker-compose -f docker/docker-compose.yml -f docker/docker-compose.dev.yml",
    "docker:build-dev": "yarn docker build",
    "docker:up": "yarn docker up",
    "docker:down": "yarn docker down",
    "docker:build": "docker-compose -f docker/docker-compose.yml build",
    "docker:prod": "docker-compose -f docker/docker-compose.yml up -d"
  },
  "devDependencies": {
    "@chile-sh/eslint-config-ts": "^2.2.0",
    "@types/dotenv": "^6.1.1",
    "@types/graphql": "^14.2.0",
    "@types/ioredis": "^4.0.10",
    "@types/jest": "^24.0.12",
    "@types/lodash": "^4.14.123",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "@chile-sh/jobs-common": "^1.5.0",
    "@sentry/node": "5.1.0",
    "apollo-server": "^2.6.1",
    "dotenv": "^7.0.0",
    "graphql": "^14.3.1",
    "graphql-import": "^0.7.1",
    "graphql-iso-date": "^3.6.1",
    "graphql-type-json": "^0.3.0"
  }
}
